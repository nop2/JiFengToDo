<UserControl
    x:Class="JiFengToDo.Views.IndexView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JiFengToDo.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="微软雅黑"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="8"
            FontSize="22"
            Text="你好，Nop！今天是2025-06-27 星期五" />

        <ItemsControl Grid.Row="1" ItemsSource="{Binding TaskBars}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" Rows="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        MinWidth="200"
                        Margin="5"
                        Background="{Binding Color}"
                        CornerRadius="5">
                        <Grid>
                            <StackPanel Margin="20,15" Orientation="Vertical">
                                <materialDesign:PackIcon
                                    Width="35"
                                    Height="35"
                                    Margin="0,0"
                                    Kind="{Binding Icon}" />
                                <TextBlock
                                    Margin="0,5"
                                    FontSize="16"
                                    Text="{Binding Title}" />
                                <TextBlock
                                    Margin="0,5"
                                    FontSize="30"
                                    FontWeight="Bold"
                                    Text="{Binding Content}" />

                            </StackPanel>

                            <Canvas ClipToBounds="True">
                                <Border
                                    Canvas.Top="10"
                                    Canvas.Right="-50"
                                    Width="120"
                                    Height="120"
                                    Background="WhiteSmoke"
                                    CornerRadius="100"
                                    Opacity="0.1" />

                                <Border
                                    Canvas.Top="80"
                                    Canvas.Right="-30"
                                    Width="120"
                                    Height="120"
                                    Background="WhiteSmoke"
                                    CornerRadius="100"
                                    Opacity="0.1" />
                            </Canvas>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

        <Grid Grid.Row="2" Margin="5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  注意透明度设置会使得所有子元素也变透明,需要在颜色中直接写明透明度  -->


            <Border
                Grid.Column="0"
                Margin="0,0,5,0"
                Padding="10"
                Background="#1ABEBEBE"
                CornerRadius="5">

                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                        <TextBlock
                            DockPanel.Dock="Left"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="WhiteSmoke"
                            Text="待办事项" />

                        <Button
                            Width="30"
                            Height="30"
                            DockPanel.Dock="Right"
                            Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <materialDesign:PackIcon Kind="Add" />
                        </Button>

                    </DockPanel>

                    <ListBox />

                </DockPanel>


            </Border>

            <Border
                Grid.Column="1"
                Margin="5,0,0,0"
                Padding="10"
                Background="#1ABEBEBE"
                CornerRadius="5">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                        <TextBlock
                            DockPanel.Dock="Left"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="WhiteSmoke"
                            Text="备忘录" />

                        <Button
                            Width="30"
                            Height="30"
                            DockPanel.Dock="Right"
                            Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <materialDesign:PackIcon Kind="Add" />
                        </Button>

                    </DockPanel>

                    <ListBox />

                </DockPanel>
            </Border>



        </Grid>

    </Grid>
</UserControl>
